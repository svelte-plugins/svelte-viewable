{
  "name": "svelte-viewable",
  "version": "0.1.0",
  "license": "MIT",
  "description": "A simple rule-based approach to tracking element viewability.",
  "author": "Kieran Boyle (https://github.com/dysfunc)",
  "svelte": "./src/index.js",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./types/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "dev": "rollup -cw",
    "predeploy": "rollup -c",
    "deploy": "npx gh-pages -d dist",
    "prepack": "BUNDLE=true rollup -c",
    "lint": "eslint --fix --max-warnings=0 \"src/**/*.{.js,svelte}\"",
    "format": "prettier --write \"src/**/*.{js,json,svelte}\"",
    "test": "jest --coverage",
    "test:coverage": "jest --coverage && open ./coverage/lcov-report/index.html",
    "test:integration": "mkdir -p ./tests/artifacts/cdplogs && yarn predeploy && yarn --cwd ./docs dev & cypress run --browser chrome --headless",
    "test:integration:debug": "cypress open"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/eslint-parser": "^7.13.10",
    "@babel/plugin-proposal-export-default-from": "^7.12.13",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.13.7",
    "@babel/preset-env": "^7.13.5",
    "@babel/runtime": "^7.13.7",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-strip": "^2.0.0",
    "@testing-library/cypress": "^7.0.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/svelte": "^3.0.3",
    "@testing-library/user-event": "^12.8.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "chalk": "^2.4.2",
    "chromatic": "^5.7.0",
    "chrome-remote-interface": "^0.29.0",
    "cypress": "^6.6.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-svelte3": "^3.1.2",
    "figlet": "^1.2.4",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-transform-svelte": "^2.1.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.1.6",
    "rollup": "^2.39.1",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.35.0",
    "svelte-loader": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/svelte-viewable/svelte-viewable.git"
  },
  "homepage": "https://github.com/svelte-viewable/svelte-viewable",
  "bugs": "https://github.com/svelte-viewable/issues",
  "keywords": [
    "viewability",
    "viewable",
    "tracking",
    "ads",
    "lazy",
    "lazy-loading",
    "svelte",
    "svelte component",
    "intersection observer",
    "observer"
  ],
  "files": [
    "lib",
    "src",
    "types"
  ],
  "dependencies": {
    "eslint": "^7.23.0"
  }
}
