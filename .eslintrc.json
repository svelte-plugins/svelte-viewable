{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "commonjs": true,
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": [
    "jest",
    "svelte3"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "ignorePatterns": [
    "dist",
    "lib"
  ],
  "overrides": [
    {
      "files": [
        "src/**/*.svelte"
      ],
      "processor": "svelte3/svelte3"
    }
  ]
}
